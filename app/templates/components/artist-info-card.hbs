{{#if expanded}}
<div class="card">
  <div class="card-block">
    <h4 class="card-title">{{artist.name}}</h4>
  </div>
  <div class='card-block'>
    <p class='card-text'>Artists</p>
    <ul>
      {{#each artist.albums as |album|}}
        <li>
          {{#link-to 'library.albums.album' album}}{{album.name}}{{/link-to}}
        </li>
      {{else}}
        <li>
          No Artists Attached
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="card-block">
    <p class='card-text'>Songs</p>
    <ul>
      {{#each artist.songs as |song|}}
        <li>
          {{#link-to 'library.songs.song' song}}{{song.title}}{{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>
{{else}}
  <div class='card'>
    <div class='card-block'>
      {{#link-to 'library.artists.artist' artist}}
        {{artist.name}}
      {{/link-to}}
      <button class='btn btn-link btn-sm' {{action 'toggleFavorite'}}>
        {{#if isFavorite}}
          <i class='fa fa-star'></i>
        {{else}}
          <i class='fa fa-star-o'></i>
        {{/if}}
      </button>
    </div>
  </div>
{{/if}}
