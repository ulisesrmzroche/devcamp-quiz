{{#if expanded}}
<div class="card">
  <div class="card-block">
    <h4 class="card-title">{{artist.name}}</h4>
  </div>
  <div class='card-block'>
    <p class='card-text'>Albums</p>
      {{#each artist.albums as |album|}}
        {{album-info-card compact=true album=album}}
      {{else}}
        <p class='card-text'>No Albums Attached</p>
      {{/each}}
  </div>
  <div class="card-block">
    <p class='card-text'>Songs</p>
    {{#each artist.songs as |song|}}
      {{song-info-card compact=true song=song}}
    {{else}}
      <li>No Songs attached</li>
    {{/each}}
  </div>
</div>
{{/if}}

{{#if compact}}
  <div class='card'>
    {{#if header}}
      {{card/card-header header=header}}
    {{/if}}
    <div class='card-block'>
      {{#link-to 'library.artists.artist' artist class='btn btn-link'}}
        <strong>{{artist.name}}</strong>
      {{/link-to}}
      {{btn-toggle-favorite artist=artist class='pull-xs-right'}}
    </div>
  </div>
{{/if}}
