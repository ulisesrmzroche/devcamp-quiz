<div class="typeahead-wrap">

  {{input class=inputClazz value=selectedValue placeholder=placeHolderText autocomplete="off" spellcheck="false"}}

  {{! Validation Messages}}
  {{#if validations.isEmpty}}
    {{#form/help-text}}
      {{resourceName}} is required.
    {{/form/help-text}}
  {{/if}}

  {{#if validations.isNotValid}}
    {{#form/help-text}}
      Invalid/Duplicate {{resourceName}}
    {{/form/help-text}}
  {{/if}}

{{#if hasStarted}}
<span class="tt-dropdown-menu {{visibility}}">
  <div class="tt-dataset-states">
    <span class="tt-suggestions">
    {{#each suggestions as |result|}}
      <div class="tt-suggestion {{if result.highlight "tt-cursor"}}" {{action "selectItem" result }}>
        {{result.name}}
      </div>
    {{else}}
      <div class="message">
        <p class='no-matches-found' {{action 'noMatchesFound'}}> {{noMessagePlaceHolderText}}</p>
      </div>
    {{/each}}
    </span>
  </div>
</span>
{{/if}}
</div>

<style>
  .tt-dropdown-menu {
    z-index: 1000;
  }
</style>
